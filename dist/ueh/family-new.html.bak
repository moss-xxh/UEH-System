        // Generate family data immediately
        function generateFamilyData() {
            const names = ['Âº†Êòé', 'ÊùéÂçé', 'ÁéãËä≥', 'ËµµÂº∫', 'ÈôàÊôì', 'ÂàòÈùô', 'Âë®Ê∂õ', 'Âê¥Êïè', 'ÈÉë‰ºü', 'Êûó‰∏Ω'];
            const locations = ['NSW', 'NSW', 'NSW', 'Perth WA', 'Adelaide SA', 'Gold Coast QLD', 'Canberra ACT', 'Newcastle NSW', 'Hobart TAS', 'Darwin NT'];
            const statuses = ['active', 'inactive', 'not-participating'];
            const deviceStatuses = ['charging', 'discharging', 'standby', 'offline'];
            
            const data = [];
            let offlineCount = 0;
            let standbyCount = 0;
            
            for (let i = 0; i < 50; i++) {
                const status = statuses[Math.floor(Math.random() * statuses.length)];
                const isActive = status === 'active';
                
                // Determine device status - only allow 3 offline, 2 standby, rest discharging
                let deviceStatus;
                if (offlineCount < 3 && i < 3) {
                    deviceStatus = 'offline';
                    offlineCount++;
                } else if (standbyCount < 2 && i < 5) {
                    deviceStatus = 'standby';
                    standbyCount++;
                } else {
                    // All others are discharging
                    deviceStatus = 'discharging';
                }
                
                data.push({
                    id: i + 1,
                    name: names[i % names.length],
                    nameKey: `family.userName${(i % 10) + 1}`,
                    location: deviceStatus === 'offline' ? 'NSW' : locations[i % locations.length],
                    status: status,
                    soc: isActive ? Math.floor(Math.random() * 40 + 60) : Math.floor(Math.random() * 50),
                    todayDischarge: isActive ? (Math.random() * 50 + 10).toFixed(1) : 0,
                    todayProfit: isActive ? (Math.random() * 20 + 5).toFixed(1) : 0,
                    totalProfit: (Math.random() * 500 + 100).toFixed(1),
                    avgProfit: (Math.random() * 15 + 3).toFixed(1),
                    deviceCode: `DEVICE${String(i + 1).padStart(3, '0')}`,
                    deviceStatus: deviceStatus,
                    usageDays: Math.floor(Math.random() * 300 + 30)
                });
            }
            
            // Sort data by device status: discharging first, then standby, then offline
            data.sort((a, b) => {
                const statusOrder = {
                    'discharging': 1,
                    'standby': 2,
                    'offline': 3,
                    'charging': 4
                };
                return (statusOrder[a.deviceStatus] || 5) - (statusOrder[b.deviceStatus] || 5);
            });
            
            return data;
        }
        
